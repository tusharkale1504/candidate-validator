{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@types"] 
    },
    "include": ["src/**/*.ts", "src/types.d.ts"],
    "exclude": ["node_modules"]
}